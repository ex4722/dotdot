sudo apt-get update && sudo apt-get -y upgrade
sudo dpkg --add-architecture i386

sudo chown ex:ex /opt

sudo apt-get install -y xclip curl wget texinfo libxpm-dev libgif-dev build-essential  install-info info libx11-dev libxpm-dev libjpeg-dev libpng-dev libgif-dev libtiff-dev libgtk2.0-dev libncurses5-dev libxpm-dev automake autoconf libgnutls28-dev  qemu-system gcc-arm-linux-gnueabihf libc6-dev-armhf-cross qemu-user-static autoconf make gcc texinfo libgtk-3-dev  libtiff5-dev libharfbuzz-dev libharfbuzz-bin imagemagick libmagickwand-dev libgccjit-10-dev libgccjit0 gcc-10 libjansson4 libjansson-dev xaw3dg-dev texinfo libx11-dev

git clone git@github.com:ex4722/dotfiles.git /opt/dotfiles
git clone https://github.com/alacritty/alacritty /opt/alacritty
git clone https://github.com/neovim/neovim /opt/neovim

curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
cargo install bat
cargo install exa 
cargo install alacritty
sudo add-apt-repository ppa:deadsnakes/ppa
sudo apt update 
sudo apt install python3.11
curl -sS https://bootstrap.pypa.io/get-pip.py | python3.11

pip3 install ipython
mkdir -p ~/.ipython/profile_default/
cp /opt/dotfiles/ipython_config.py ~/.ipython/profile_default/

git clone --depth 1 https://github.com/doomemacs/doomemacs ~/.emacs.d
git clone git://git.savannah.gnu.org/emacs.git /opt/emacs
export CC="gcc-10"
(cd /opt/emacs && gitcheck emacs-28.2 && ./autogen.sh && make -j`nproc` && ./configure --with-native-compilation -with-json --with-modules --with-harfbuzz --with-compress-install ds --with-included-regex --with-zlib --with-jpeg --with-png --with-imagemagick --with-tiff --with-xpm --with-gnutls -with-xml2 --with-mailutils)
~/.emacs.d/bin/doom install
